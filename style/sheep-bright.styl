
clr                   = {} 
clr.black             = #000000
clr.gray-most-dark    = #181818
clr.gray-very-dark    = #282828
clr.gray-dark         = #333333
clr.gray-medium       = #555555
clr.gray              = #888888
clr.gray-bright       = #cccccc
clr.gray-very-bright  = #dddddd
clr.gray-super-bright = #eeeeee
clr.white             = #ffffff
clr.yellow-bright     = #ffff88
clr.yellow            = #ffff00
clr.orange            = #ff8800
clr.red               = #ff0000
clr.green-bright      = #44ff44
clr.green             = #00aa00
clr.green-dark        = #006600
clr.blue-dark         = #2222aa
clr.blue              = #4444ff
clr.blue-medium       = #6666ff
clr.blue-bright       = #8888ff
clr.blue-very-bright  = #aaaaff
clr.blue-super-bright = #ccccff

clr.background = #fafafa

body
    font-family       Verdana
    background-color: clr.background

::selection
    color:            clr.gray-bright

/*
*  000  000   000  00000000   000   000  000000000
*  000  0000  000  000   000  000   000     000   
*  000  000 0 000  00000000   000   000     000   
*  000  000  0000  000        000   000     000   
*  000  000   000  000         0000000      000   
*/
     
.main-input
    border-radius     6px
    background-color: clr.white
    color:            clr.gray
    border:           none
    &:focus
        background-color: clr.white

#master
    color:          clr.gray-bright
    &:focus
        box-shadow: 0 0 10px clr.yellow
        color:      clr.red

        
clr.site        = clr.green 
clr.site-medium = clr.green-dark
clr.site-bright = clr.green-bright 
#site
    color:                   clr.site
    &:focus
        box-shadow: 0 0 10px clr.site-bright
        color:               clr.site-medium
                
clr.pattern        = clr.gray-dark
clr.pattern-medium = clr.black
clr.pattern-bright = clr.gray-bright
#pattern
    color:                   clr.pattern 
    &:focus
        box-shadow: 0 0 10px clr.pattern-bright
        color:               clr.pattern-medium

clr.password        = clr.blue
clr.password-medium = clr.blue-dark
clr.password-bright = clr.blue-bright
#password
    color:                   clr.password
    &:focus
        box-shadow: 0 0 10px clr.password-bright
        color:               clr.password-medium
    
.ghost
    font-family:    sans-serif
    font-weight:    bold
    color:          rgba(0,0,0, 0.1)
    
/*
*  0000000     0000000   00000000   0000000    00000000  00000000 
*  000   000  000   000  000   000  000   000  000       000   000
*  0000000    000   000  0000000    000   000  0000000   0000000  
*  000   000  000   000  000   000  000   000  000       000   000
*  0000000     0000000   000   000  0000000    00000000  000   000
*/
    
.border
    box-shadow:           inset 0px 0px 12px rgba(0, 0, 0, 0.25)
    background-color:     clr.white
    &.focus
        background-color: clr.orange-bright
        box-shadow:       inset 1px 1px 10px rgba(0, 0, 0, 0.25)

#master-border
    &.focus
        background-color: clr.orange

#site-border
    &.focus
        background-color: clr.site-bright

#pattern-border
    &.focus
        background-color: clr.gray-very-bright

#password-border
    &.focus
        background-color: clr.blue-very-bright
        
/*
*  000   0000000   0000000   000   000   0000000
*  000  000       000   000  0000  000  000     
*  000  000       000   000  000 0 000  0000000 
*  000  000       000   000  000  0000       000
*  000   0000000   0000000   000   000  0000000 
*/
    
.lock    
#lock
    &.closed
        color:      clr.blue-medium
    &.open
        color:      clr.blue-very-bright

.bool    
    &.bool-true
        color:      clr.gray-bright
    &.bool-false
        color:      clr.gray-super-bright

.focus .bool
    color:      clr.black

#floppy
    color:          clr.black
    &.saved
        color:      clr.gray-super-bright
            
/*
*   0000000  000   000  00000000  00000000  00000000 
*  000       000   000  000       000       000   000
*  0000000   000000000  0000000   0000000   00000000 
*       000  000   000  000       000       000      
*  0000000   000   000  00000000  00000000  000      
*/

#sheep
    box-shadow:    inset 1px 1px 15px rgba(0, 0, 0, 0.2)
    &:focus
        box-shadow:      4px 4px 8px rgba(0, 0, 0, 0.4)
    &:active
        box-shadow:      0px 0px  1px rgba(0, 0, 0, 0.1)
        border: 1px solid clr.gray-most-dark
    border-radius: 12px        
    background url(../img/sheep-bright.png) no-repeat
    
/*
*  0000000    000   000  0000000    0000000    000      00000000
*  000   000  000   000  000   000  000   000  000      000     
*  0000000    000   000  0000000    0000000    000      0000000 
*  000   000  000   000  000   000  000   000  000      000     
*  0000000     0000000   0000000    0000000    0000000  00000000
*/

clr.bubble = rgba(255,255,255,0.38)
clr.bubble-ask = rgba(255,255,255,0.8)

#say-tri
    border-left:   20px solid transparent 
    border-right:  20px solid transparent 
    border-bottom: 20px solid clr.bubble

#say
    text-align:       center
    font-family:      arial
    font-size:        17px
    font-weight:      bold
    text-shadow:      1px 1px 5px clr.gray
    color:            clr.blue-dark
    background-color: clr.bubble     
    line-height:      0.9    
    
#say b
        color: clr.site-medium
#say i
        color: clr.pattern-medium
        font-style: normal
#say u
        color: clr.password-medium
        text-decoration: none
#say p
        margin-top: 8px
                
#bubble.ask #say
    background-color: clr.bubble-ask
#bubble.ask #say-tri
    border-bottom: 20px solid clr.bubble-ask
#bubble.whisper #say
    font-size:  14px
    
    
.open
    color: clr.blue-medium
    &:hover
        color: clr.blue-bright

/*
*  0000000    000   000  000000000  000000000   0000000   000   000
*  000   000  000   000     000        000     000   000  0000  000
*  0000000    000   000     000        000     000   000  000 0 000
*  000   000  000   000     000        000     000   000  000  0000
*  0000000     0000000      000        000      0000000   000   000
*/

.button-border
    border-radius:        10px
    background-color:     clr.white
    color:                clr.gray-bright
    &.focus
        color:            clr.black
        background-color: clr.white
    &.disabled
        opacity: 0.5
        color: clr.gray
        
#about-border
    &.focus
        color:            clr.password
        background-color: clr.password-bright

#prefs-border
    &.focus
        color:            clr.pattern
        background-color: clr.pattern-bright
    
#list-border
#help-border
    &.focus
        color:            clr.site-medium
        background-color: clr.site-bright
    
.button
    border-radius:    4px
    border:           none
    background-color: clr.white
    &:active
        background-color: clr.gray-very-bright
        color:            clr.black

#about
    &:focus
        box-shadow: 0 0 10px clr.password-bright
        color:               clr.password-medium

#prefs
    &:focus
        box-shadow: 0 0 10px clr.pattern-bright
        color:               clr.pattern-medium

#list
#help
    &:focus
        box-shadow: 0 0 10px clr.site-bright
        color:               clr.site-medium
    
/*
*   0000000  000000000   0000000    0000000  000   000  000      000   0000000  000000000
*  000          000     000   000  000       000   000  000      000  000          000   
*  0000000      000     000000000  0000000   000000000  000      000  0000000      000   
*       000     000     000   000       000  000   000  000      000       000     000   
*  0000000      000     000   000  0000000   000   000  0000000  000  0000000      000   
*/

.pref-item-border
.stash-item-border
        
    background-color: clr.white
    box-shadow:           inset 2px 2px 4px rgba(0, 0, 0, 0.1)

    &.focus
        box-shadow:       inset 1px 1px 4px rgba(0, 0, 0, 0.2)
        
    & .site
    & .pref        
    & .pattern    
        color:     clr.gray
    &.focus .pref   
        color:     clr.black
    &.focus .site   
        color:     clr.site-medium
    &.focus .pattern
        color:     clr.pattern-medium       

.stash-item-border.focus
    background-color: clr.site-bright
.pref-item-border.focus
    background-color: clr.blue-super-bright

.pref-item
.stash-item
    border:           none
    border-radius:    6px    
    background-color: clr.white
            
/*
*   0000000   0000000     0000000   000   000  000000000
*  000   000  000   000  000   000  000   000     000   
*  000000000  0000000    000   000  000   000     000   
*  000   000  000   000  000   000  000   000     000   
*  000   000  0000000     0000000    0000000      000   
*/

#about
    color:         clr.blue

    & h1
        color:     clr.orange
        
        &:hover 
            color:  clr.yellow
        &:active 
            color: clr.yellow-bright
        
    & h2
        color:     clr.blue-bright
    & sub
        color:     clr.gray-medium
    & a
    & .link
        color:     clr.blue
        &:hover 
            color: clr.orange
        &:active 
            color: clr.blue-very-bright

#about-github
    &:hover .github-svg
        fill:       clr.orange
    &:active .github-svg
        fill:       clr.blue-very-bright

.github-svg
    fill:           clr.blue
