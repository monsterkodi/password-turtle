#sheep
    -webkit-app-region: no-drag
    -webkit-transition: all 0.2s ease-in-out
    margin:        12px
    border-radius: 12px
    box-shadow:    inset 2px 2px 15px rgba(0, 0, 0, 1.0)    
    &:hover
        box-shadow:      2px 2px 15px rgba(0, 0, 0, 0.5)    
    &:active
        box-shadow:      0px 0px  5px rgba(0, 0, 0, 0.5)
        opacity:         0.8

#password-border
#master-border
#site-border
    margin-bottom: 12px

#site-border
    &.focus
        background-color: color.green
        box-shadow:       inset 2px 2px 17px rgba(0, 0, 0, 0.75)

#password-border
    &.focus
        background-color: color.blue
        box-shadow:       inset 2px 2px 17px rgba(0, 0, 0, 0.75)

#pattern-border
    &.focus
        background-color: color.gray
        box-shadow:       inset 2px 2px 17px rgba(0, 0, 0, 0.75)
            
