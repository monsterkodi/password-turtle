
color                  = {} 
color.black            = #000000
color.gray-most-dark   = #181818
color.gray-very-dark   = #282828
color.gray-dark        = #333333
color.gray             = #888888
color.gray-bright      = #cccccc
color.gray-very-bright = #dddddd
color.white            = #ffffff
color.yellow-bright    = #ffff88
color.yellow           = #ffff00
color.orange-bright    = #ffaa00
color.orange           = #ff8800
color.red              = #ff0000
color.green-bright     = #00ff00
color.green            = #00aa00
color.green-dark       = #006600
color.blue-dark        = #2222aa
color.blue             = #4444ff
color.blue-medium      = #6666ff
color.blue-bright      = #8888ff
color.blue-very-bright = #aaaaff

@font-face
    font-family: UbuntuMono
    src: url('./font/UbuntuMono-R.ttf')

body
    font-family:      Verdana
    background-color: #222222
    margin:           0px
    height:           100%
    overflow: hidden
    -webkit-app-region: drag
    -webkit-user-select: none
    
::selection
    color:            color.yellow
     
/*
*  000  000   000  00000000   000   000  000000000
*  000  0000  000  000   000  000   000     000   
*  000  000 0 000  00000000   000   000     000   
*  000  000  0000  000        000   000     000   
*  000  000   000  000         0000000      000   
*/
     
.no-pointer
    pointer-events: none

.main-input
    -webkit-transition:  all 0.4s ease-in-out
    -webkit-app-region: no-drag
    font-size:        24px
    width:            100%
    padding-left:     6px
    box-sizing:       border-box
    background-color: color.gray-very-dark
    color:            color.gray
    border-radius:    4px
    border:           1px solid color.gray-very-dark
    text-align:       center
    outline:          none
    &:focus
        background-color: color.gray-very-dark
        border:           1px solid color.gray-most-dark
#master
    color:      color.gray-dark
    &:focus
        box-shadow: 0 0 10px color.yellow
        color:      color.orange
        
color.site        = color.green-dark       
color.site-medium = color.green 
color.site-bright = color.green-bright 
#site
    color:                   color.site
    &:focus
        box-shadow: 0 0 10px color.site-bright
        color:               color.site-medium
                
color.pattern        = color.gray
color.pattern-medium = color.white
color.pattern-bright = color.white
#pattern
    color:                   color.pattern 
    &:focus
        box-shadow: 0 0 10px color.pattern-bright
        color:               color.pattern-medium

color.password        = color.blue-medium
color.password-medium = color.blue-very-bright
color.password-bright = color.blue-very-bright
#password
    color:                   color.password
    &:focus
        box-shadow: 0 0 10px color.password-bright
        color:               color.password-medium
    
.ghost
    -webkit-transition: all 0.8s ease-in-out
    pointer-events: none
    font-family:    sans-serif
    font-weight:    bold
    font-size:      24px
    position:       absolute
    top:            12px
    left:           0
    right:          0
    text-align:     left
    padding-left:   20px
    color:          rgba(255, 255, 255, 0.1)
    
#lock
#password-ghost
    -webkit-transition: all 0.2s ease-in-out
    
#lock
    top:            14px
    color:          color.orange
    &.closed
        color:      color.blue-medium

#floppy
    font-size:      19px
    top:            15px
    color:          color.white
    text-align:     right
    padding-right:  20px
    &.saved
        color:      color.gray-dark
        
/*
*  0000000     0000000   00000000   0000000    00000000  00000000 
*  000   000  000   000  000   000  000   000  000       000   000
*  0000000    000   000  0000000    000   000  0000000   0000000  
*  000   000  000   000  000   000  000   000  000       000   000
*  0000000     0000000   000   000  0000000    00000000  000   000
*/
    
.border
    -webkit-transition:  all 0.4s ease-in-out
    box-shadow:    inset 2px 2px 17px rgba(0, 0, 0, 0.25)
    border:        1px solid color.gray-very-dark
    position:      relative
    padding:       10px
    border-radius: 10px
    margin-left:   12px
    margin-right:  12px
    background-color: color.gray-dark
    &.focus
        background-color: color.orange
        box-shadow:       inset 2px 2px 17px rgba(0, 0, 0, 0.75)

#password-border
#master-border
#site-border
    margin-bottom: 12px

#site-border
    &.focus
        background-color: color.site-medium
        box-shadow:       inset 2px 2px 17px rgba(0, 0, 0, 0.75)

#pattern-border
    &.focus
        background-color: color.pattern
        box-shadow:       inset 2px 2px 17px rgba(0, 0, 0, 0.75)

#password-border
    &.focus
        background-color: color.password
        box-shadow:       inset 2px 2px 17px rgba(0, 0, 0, 0.75)

/*
*   0000000  000   000  00000000  00000000  00000000 
*  000       000   000  000       000       000   000
*  0000000   000000000  0000000   0000000   00000000 
*       000  000   000  000       000       000      
*  0000000   000   000  00000000  00000000  000      
*/

#sheep
    -webkit-app-region: no-drag
    -webkit-transition: box-shadow 0.3s ease-in-out
    margin:        12px
    border-radius: 12px
    box-shadow:    inset 2px 2px 15px rgba(0, 0, 0, 1.0)
    outline:       none
    &:focus
        box-shadow:      2px 2px 15px rgba(0, 0, 0, 0.5)
    &:active
        box-shadow:      0px 0px  5px rgba(0, 0, 0, 0.5)
        opacity:         0.8
        
