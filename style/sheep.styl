color.bubble = rgba(0,0,0,0.38)
color.bubble-ask = rgba(0,0,0,0.8)

#bubble
    -webkit-transition:  all 0.5s ease-in-out
    -webkit-app-region: no-drag
    position:       absolute
    top:            170px    
    right:          27px
    &.ask
    &.say
        pointer-events: all
        left:           27px
        opacity:        1
    &.whisper
        pointer-events: all
        left:           157px
        opacity:        1 
    &.silent
        pointer-events: none
        left:           217px
        opacity:        0

#say-tri
    -webkit-transition:  all 0.5s ease-in-out
    position:      absolute
    width:         0
    height:        0
    right:         33px
    border-left:   20px solid transparent 
    border-right:  20px solid transparent 
    border-bottom: 20px solid color.bubble

#say
    -webkit-transition:  all 0.5s ease-in-out
    text-align:       center
    font-family:      UbuntuMono
    font-size: 16px
    text-shadow:      2px 2px 5px black
    position:         absolute
    top:              20px
    left:             0
    right:            0
    height:           45px
    border-radius:    20px
    padding:          6px
    padding-top:      12px
    padding-left:     18px
    padding-right:    18px
    color:            color.orange
    background-color: color.bubble        
    
#say b
        color: color.site-medium
#say i
        color: color.pattern-medium
        font-style: normal
#say u
        color: color.password-medium
        text-decoration: none
#say p
        margin-top: 8px
            
#bubble.whisper #say    
    font-size:        16px
    height:           21px
    padding-left:     8px
    padding-right:    8px
    
#bubble.silent #say    
    font-size:        0px
    height:           8px
    padding-left:     0px
    padding-right:    0px
    
#bubble.ask #say
    background-color: color.bubble-ask
#bubble.ask #say-tri
    border-bottom: 20px solid color.bubble-ask
    
.open
    color: color.blue-medium
    &:hover
        color: color.blue-bright
        cursor: pointer

/*
*   0000000  00000000  000000000  000000000  000  000   000   0000000    0000000
*  000       000          000        000     000  0000  000  000        000     
*  0000000   0000000      000        000     000  000 0 000  000  0000  0000000 
*       000  000          000        000     000  000  0000  000   000       000
*  0000000   00000000     000        000     000  000   000   0000000   0000000 
*/

#settings
    position: absolute
    left: 0
    right: 0

#button-list
    margin-top    12px
    margin-left   12px
    margin-right  12px
    margin-right  12px
    
.button
    -webkit-app-region: no-drag
    -webkit-transition-property: box-shadow, border  
    -webkit-transition-duration: 0.4s
    -webkit-transition-timing-function: ease-in-out
    box-sizing:       border-box
    position:         static
    height:           35px
    width:            35px
    border-radius:    4px
    border:           1px solid color.gray-very-dark
    background-color: color.gray-very-dark
    outline:          none    
    &:focus
        box-shadow:       0 0 10px color.yellow
        border:           1px solid color.black
        background-color: color.gray-very-dark
    &:active
        background-color: color.gray-most-dark
    
#list
    &:focus
        box-shadow: 0 0 10px color.password-bright
        color:               color.password-medium

#setup
    &:focus
        box-shadow: 0 0 10px color.pattern-bright
        color:               color.pattern-medium

#about
    &:focus
        box-shadow: 0 0 10px color.site-bright
        color:               color.site-medium
    
.button-border
    -webkit-app-region:   drag
    -webkit-transition:   all 0.4s ease-in-out
    pointer-events:       all
    box-shadow:           inset 2px 2px 17px rgba(0, 0, 0, 0.25)
    border:               1px solid color.gray-very-dark
    display:              inline-block
    position:             relative
    padding:              10px
    margin:               0px
    margin-right:         7px
    border-radius:        10px
    background-color:     color.gray-dark
    color:                gray
    &.focus
        color:            color.yellow
        background-color: color.orange        
        box-shadow:       inset 2px 2px 17px rgba(0, 0, 0, 0.75)
    
#help-border
    margin-right:  0px
    
#list-border
    &.focus
        color:            color.password-bright
        background-color: color.password
        box-shadow:       inset 2px 2px 17px rgba(0, 0, 0, 0.75)

#setup-border
    &.focus
        color:            color.pattern-bright
        background-color: color.pattern
        box-shadow:       inset 2px 2px 17px rgba(0, 0, 0, 0.75)
    
#about-border
    &.focus
        color:            color.site-bright
        background-color: color.site-medium
        box-shadow:       inset 2px 2px 17px rgba(0, 0, 0, 0.75)
    
.button-icon
    pointer-events: none
    position:       absolute
    left:           21px
    top:            19px
    
