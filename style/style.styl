html
    height 100%

body
  margin 0
  padding 0
  background #333333
  color #eaeaea
  font-size 18px
  line-height 1.3
  font-family Verdana
  height 100%

a
    text-decoration none
    color #aaf
    &:hover
        color #f80

h1
    margin-top 0px
    color #f80
    
img
    display       block
    margin-left   auto
    margin-right  auto

.main_container 
  width 90%
  max-width 900px
  margin 0 auto

.container 
  width 90%
  max-width 600px
  margin 0 auto
  text-align justify

section 
  display block
  margin 0 0 20px 0

header 
  background #222222
  width 100%
  border-bottom 1px solid #111111
  padding 20px 0
  margin-bottom 50px

h1, h2, h3, h4, h5, h6 
  margin 0 0 20px
  font-weight bold

li 
  line-height 1.4 

a 
  text-decoration none
  color #63c0f5

a:hover

  color #EFAF31

header h1 
  font-size 42px
  font-weight bold
  text-shadow 0 1px 1px rgba(0, 0, 0, 0.1),
               0 0 5px rgba(181, 232, 83, 0.1),
               0 0 10px rgba(181, 232, 83, 0.1)
  -webkit-font-smoothing antialiased

header h1 a 
  color #EFAF31

header h1 a:hover 
  color #63c0f5

header h2 
  padding-top 29px
  font-size 16px
  font-weight 300
  color #666

#downloads .btn 
  display inline-block
  text-align center
  margin 0

#main_content 
  width 100%
  -webkit-font-smoothing antialiased

section img 
  max-width 100%

h1
  color orange
  
h2, h3, h4, h5, h6 
  color #88f

#main_content h1 
  font-size 30px

#main_content h2 
  font-size 24px

#main_content h3 
  font-size 18px

#main_content h4 
  font-size 14px

#main_content h5 
  font-size 12px
  text-transform uppercase
  margin 0 0 5px 0

#main_content h6 
  font-size 12px
  text-transform uppercase
  color #999
  margin 0 0 5px 0

dt 
  font-style italic
  font-weight bold

ul li 
  list-style none

ul li:before 
  content "â–º"
  color #0a0
  margin-right 8px

blockquote 
  color #aaa
  padding-left 10px
  border-left 1px dotted #666

pre 
  background rgba(0, 0, 0, 0.9)
  border 1px solid rgba(255, 255, 255, 0.15)
  padding 10px
  font-size 14px
  color #b5e853
  border-radius 8px
  -webkit-border-radius 8px
  overflow auto
  overflow-y hidden

hr 
  height 0
  border 0
  border-bottom 1px solid #b5e853
  color #b5e853

.icon 
  width 64px
  height 64px

.btn:hover 
  color #EFAF31

.btn:focus
    border  none
    outline none

path.kitty 
  fill #63c0f5

.btn:hover path.kitty 
  fill #EFAF31
